#!/bin/sh

# frontend for:            cuetools, shntool, mp3splt
# optional dependencies:    flac, mac, wavpack

SDIR=`pwd`

if [ "$1" = "" ]
  then
    DIR="$SDIR"
else
    case $1 in
        -h | --help )
            echo "Usage: cuesplit [Path]"
            echo "       The default path is the current directory."
            exit
            ;;
        * )
        DIR=$1
    esac
fi

ODIR="$DIR/split"

echo -e "\

Directory: $DIR
________________________________________
"
cd "$DIR"
mkdir -p "$ODIR"
TYPE=`ls -t1`

case "$TYPE" in
    *.ape*)
        shnsplit -f *.cue -d "$ODIR" -a track -o "flac flac -s -o %f -" *.ape
        # cuebreakpoints *.cue | shnsplit -d "$ODIR" -a track -o flac *.ape
        cuetag.sh *.cue "$ODIR"/track*.flac
        exit
        ;;

    *.flac*)
        # shnsplit -f *.cue -d "$ODIR" -a track -o "flac flac -s -o %f -" *.flac
        cuebreakpoints *.cue | shnsplit -d "$ODIR" -a track -o flac *.flac
        cuetag.sh *.cue "$ODIR"/track*.flac
        exit
        ;;

    *.wav*)
        cuebreakpoints *.cue | shnsplit -d "$ODIR" -a track -o flac *.wav
        cuetag.sh *.cue "$ODIR"/track*.flac
        exit
        ;;

    * )
    echo "Error: Found no files to split!"
    echo "       --> APE, FLAC, WAV"
esac
exit
