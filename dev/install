# etc
# ===
# potentially useful commands
# ---------------------------
# exeptions:
#   -   fehbg needs to be executable, 744
set_default_user_permissions() {
    chown -R "$USER:$USER" *
    find . -type f -exec chmod 644 {} \;
    # need executable flag on directories to cd, hence the 755
    find . -type d -exec chmod 755 {} \;
}
