# jfbview
# =======
install_jfbview() {
    wd="$HOME/src"
    cd $wd
    git clone https://github.com/jichu4n/JFBView
    mv JFBView jfbview
    ln -s "$wd/jfbview/jfbview" jfbview
}

# vim
# ===
install_vim() {
    # handle vimrc and vim from git, mkdir undo
    install_vundle
}
# vundle
# ------
install_vundle() {
    git clone https://github.com/VundleVim/Vundle.vim.git $DOTFILES/vim/bundle/Vundle.vim
    # run PluginInstall for default plugins
    # if wants_ycm (rename), install_ycm
}

install_ycm() {
    # make sure PluginInstall has been run
    cd "$DOTFILES/vim/bundle/YouCompleteMe"
    python2 install.py --clang-completer
}

