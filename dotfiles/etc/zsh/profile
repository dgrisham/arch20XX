# General environment
# -------------------

### Terminal
export TERM='screen-256color'

### Wifi
export WIFI_CARD='wlp3s0'

### Bin
export BIN="$HOME/bin"
export PATH="$PATH:$BIN"

### Directories
export DOTFILES="$HOME/dotfiles"
export DOWNLOADS="$HOME/downloads"
export SRC="$HOME/src"
export PERSONAL="$HOME/personal"
export MEDIA="$HOME/media"
export MUSIC="$MEDIA/music"
export SCRATCH="$HOME/scratch"
## XDG
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$DOTFILES"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DOWNLOAD_DIR="$DOWNLOADS"
export XDG_DESKTOP_DIR="/dev/null"
#### GPG
export GNUPGHOME="$DOTFILES/gnupg"

### Alias files
export LOCAL_ALIAS="$DOTFILES/zsh/aliases"
export GLOBAL_ALIAS="/etc/zsh/aliases"
export ALIASES="$DOTFILES/zsh/alias"

### Defaults
export EDITOR="vim"
export VISUAL="$EDITOR"
export VIEWER="jfbview"
export BROWSER="w3m"
export PUBLISHER="git"
export PLAYER="mpv"

# Go path
export GOPATH="$HOME/.go"
# add GOPATH/bin to PATH
export PATH="$PATH:$GOPATH/bin"
