# General environment
# -------------------

### Terminal
export TERM=xterm-256color

### Bin
export BIN="$HOME/bin"
export PATH="$PATH:$BIN"

### Directories
export DOTFILES="$HOME/dotfiles"
export DOWNLOADS="$HOME/downloads"
export SRC="$HOME/src"
export PERSONAL="$HOME/personal"
export MEDIA="$HOME/media"
export MUSIC="$MEDIA/music"
export SCRATCH="$HOME/scratch"
#### GPG
export GNUPGHOME="$DOTFILES/gnupg"

### Alias files
export LOCAL_ALIAS="$DOTFILES/zsh/aliases"
export GLOBAL_ALIAS="/etc/zsh/aliases"
export ALIASES="$DOTFILES/zsh/alias"

### Defaults
export EDITOR="vim"
export VISUAL="$EDITOR"
export VIEWER="jfbview"
export BROWSER="w3m"
export PUBLISHER="git"
export PLAYER="mpv"

