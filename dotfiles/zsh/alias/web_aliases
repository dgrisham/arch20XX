# web-dev project aliases
# =======================

# environment
# -----------
export VENVS="$HOME/.venv"
export WEB="$SCRATCH/web"
export FLASKY="$WEB/flasky"

# convenient aliases for flasky
# -----------------------------
flasky_aliases() {
    alias run="$FLASKY/manage.py runserver"
    alias test="$FLASKY/manage.py test"
}
