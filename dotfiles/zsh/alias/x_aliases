#!/bin/zsh

# X aliases
# =========

# general
# -------
xb() { xbacklight $1% }

# steam
# -----
alias stm='LD_PRELOAD='"'"'/usr/$LIB/libstdc++.so.6 /usr/$LIB/libgcc_s.so.1 /usr/$LIB/libxcb.so.1 /usr/$LIB/libgpg-error.so'"'"' steam'

# hdmi
# ----
alias hdmi-on="xrandr --output HDMI1 --auto --scale-from 1280x720 --above eDP1"
alias hdmi-off="xrandr --output HDMI1 --off "

alias stm='~/.local/share/Steam/steam.sh'
